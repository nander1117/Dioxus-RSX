{
  "name": "dioxus-rsx",
  "displayName": "Dioxus RSX Syntax Highlighter",
  "description": "Provides syntax highlighting for Dioxus RSX files.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [{
      "id": "rust",
      "aliases": ["rsx", "rust"],
      "extensions": [".rsx"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "injectTo": ["source.rust", "rust","source.dioxus.rsx", "source.rsx", "source.dioxus.rs", "source.rs"],
       "patterns": [
        {
          "begin": "rsx!\\s*\\{",
          "end": "\\}",
          "contentName": "text.html.rsx"
        }
      ],
      "scopeName": "source.dioxus.rsx",
      "path": "./syntaxes/rust.tmLanguage.json"
    }]
  }
}
