{
  "name": "dioxus-rsx",
  "displayName": "Dioxus RSX(HTML) Syntax Highlighter",
  "description": "Provides syntax highlighting for Dioxus RSX(HTML) files.",
  "version": "0.0.3",
  "engines": {
    "vscode": "^1.102.0"
  },
  "publisher": "JhonAF",
  "icon": "assets/icons/icon.ico",
  "categories": [
    "Programming Languages"
  ],
  "repository": {
      "type": "git",
      "url": "https://github.com/nander1117/Dioxus-RSX"
  },
  "bugs": {
        "url": "https://github.com/nander1117/Dioxus-RSX/issues"
  },
  "homepage": "https://github.com/nander1117/Dioxus-RSX/README.md",
  "contributes": {

    "grammars": [{
      "injectTo": ["source.rust"],
      "patterns": [
        {
          "begin": "rsx!\\s*\\{",
          "end": "\\}",
          "contentName": "text.html.rsx"
        }
      ],
      "scopeName": "source.dioxus.rsx",
      "path": "./syntaxes/dioxus-rsx.tmLanguage.json"
    }],

    "configurationDefaults": {
      "editor.semanticHighlighting.enabled": false,
      "[rust]": {
        "editor.semanticTokenColorCustomizations": {
          "enabled": true,
          "rules":{}
        },
        "editor.tokenColorCustomizations": {
          "[One Dark *]": {
            "textMateRules": [
              {
                "scope":"keyword.other.rust.rsx",
                "settings": {
                  "foreground": "#e46868"
                }
              },
              {
                "scope":"entity.name.function.rsx",
                "settings": {
                  "foreground": "#e4af7a"
                }
              },
              {
                "scope": "entity.name.type.rsx",
                "settings": {
                  "foreground": "#e46868"
                }
              }
            ]
          }
        }
      },
      "editor.semanticTokenColorCustomizations": {
        "enabled": true,
        "[Monokai Vibrant *]":{
          "rules": {
            "const": "#ae7ffa"
          }  
        }
      }
    }
 
  }
}
